# EditorConfig helps maintain consistent coding style for multiple developers
# Docs: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{package.json,*.yml,*.yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
